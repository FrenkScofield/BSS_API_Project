@using BSS_Shopping.Domain.ViewModel
@model ProductCategoryViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 my-4">
        <div class="card shadow my-4">
            <div class="card-header py-4">
                Update Product <a asp-action="Index" class="float-right btn btn-outline-secondary">Back to Index</a>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="col-md-6">

                            <div class="form-group">
                                <label for="exampleFormControlSelect1">Kateqoriya</label>
                                <select class="form-control select-category" asp-items="@Model.CategoryNames"  asp-for="@Model.Category.Id"  id="exampleFormControlSelect1">
                                    <option value="0">Select</option>

                                </select>
                                <input type="hidden" id="categoryNameHidden" asp-for="@Model.Product.CategoryId" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Name</label>
                                <input type="text" id="name" asp-for="@Model.Product.Name" class="form-control" />
                                <span class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Description</label>
                                <textarea id="description" asp-for="@Model.Product.Description" class="form-control" style="height: 140px;"></textarea>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">

                            <div class="form-group">
                                <label class="control-label">Price</label>
                                <input type="number" asp-for="@Model.Product.Price" id="price" class="form-control" />
                                <span class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="control-label">Date </label>
                                <input type="date" asp-for="@Model.Product.CreateDate" id="datetimepicker" value="2021-04-08" class="form-control" />
                                <span class="text-danger"></span>
                            </div>

                        </div>

                    </div>
                    <input type="hidden"  />

                    <div class="form-group">
                        <input type="submit" value="Update" id="btnAddModels" class="btn btn-success name" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        $(document).on("change", ".select-category", function () {
            $("#categoryNameHidden").val($(this).val());
        })
    </script>


    <script>
        $('#datetimepicker').datetimepicker({

            language: 'en-US',
            format: 'dd-MM-yyyy'

        });
    </script>





}